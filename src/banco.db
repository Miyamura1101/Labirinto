CREATE TABLE pessoas (
    id INTEGER PRIMARY KEY,
    nome TEXT,
    profissao TEXT,
    divida REAL
);

CREATE TABLE locais (
    id INTEGER PRIMARY KEY,
    nome TEXT
);

CREATE TABLE visitas (
    id INTEGER PRIMARY KEY,
    pessoa_id INTEGER,
    local_id INTEGER,
    data TEXT,
    FOREIGN KEY (pessoa_id) REFERENCES pessoas(id),
    FOREIGN KEY (local_id) REFERENCES locais(id)
);

